extends layout
block content
    .w3-card-4
        header.w3-container.w3-deep-orange.w3-padding
            h3 Editar aluno

        form(action=`/alunos/${infoaluno._id}`, method='POST').w3-container
                label.w3-text-deep-orange
                    b Número:
                input(type='text', name='Número', value=infoaluno.Número).w3-input.w3-border.w3-light-grey
                label.w3-text-deep-orange
                    b Nome:
                input(type='text', name='Nome', value=infoaluno.Nome).w3-input.w3-border.w3-light-grey
                label.w3-text-deep-orange
                    b Página Github:
                input(type='text', name='Git', value=infoaluno.Git).w3-input.w3-border.w3-light-grey
                input(type='submit', value='Editar').w3-btn.w3-blue-grey.w3-margin
                
        footer(class="w3-container w3-deep-orange")
            .w3-container
                a(href='/') 
                    button Início 
                a(href='/alunos') 
                    button Alunos
                address Gerado por Marco Matias :: 2020-Novembro