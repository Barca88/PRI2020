extends layout
block content
    .w3-card-4
        header.w3-container.w3-deep-orange.w3-padding
            h3.w3-left Aluno
        if infoaluno != null
            label.w3-text-deep-orange
                b Nome: 
            label.w3-border.w3-light-grey
                b #{infoaluno.Nome}
            p
            label.w3-text-deep-orange
                b Número: 
            label.w3-border.w3-light-grey
                b #{infoaluno.Número}
            p
            label.w3-text-deep-orange
                b Página Github: 
            label.w3-border.w3-light-grey
                b #{infoaluno.Git}
            p
            label.w3-text-deep-orange
                b Tpc's: 
            label.w3-border.w3-light-grey
                b #{infoaluno.tpc}
            p
        else
            div(class="w3-container")
                p Erro: Aluno não encontrado...
                p
                a(href='/') Voltar a página inicial.
                p
                a(href='/alunos') Voltar a página de alunos.
        footer(class="w3-container w3-deep-orange")
            .w3-container
                a(href='/') 
                    button Início 
                a(href='/alunos') 
                    button Alunos
                address Gerado por Marco Matias :: 2020-Novembro