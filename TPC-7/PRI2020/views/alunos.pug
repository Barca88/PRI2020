extends layout
block content
    .w3-card-4
      header.w3-container.w3-deep-orange.w3-padding
        .w3-left
            h3 Lista de Alunos
        a(href='/alunos/registar')
            button.w3-circle.w3-black.w3-right.w3-margin.w3-xlarge +
                 
      if lista.length > 0
        .w3-container
          table(class="w3-table-all")
            tr 
                th Número
                th Nome
                th Git
                th
                th
            each a in lista
                tr
                    td
                        a(href='/alunos/'+a._id) #{a.Número}
                    td= a.Nome
                    td= a.Git
                    td  
                        a(href='/alunos/update/'+a._id)
                            button.w3.center.w3.black Editar
                    td  
                        form(method='POST' action=`/delete/${a._id}`)
                            input(type='submit' value='Apagar')
                        
      else
            div(class="w3-container")
                p Ainda não há alunos registados...
      
      footer(class="w3-container w3-deep-orange")
        address Gerado por Marco Matias :: 2020-Novembro
            